{
    "openapi": "3.0.0",
    "info": {
      "title": "Food Pairing API",
      "version": "1.0.0",
      "description": "API documentation "
    },
    "paths": {
      "/recommendation/custom": {
        "get": {
          "summary": "Meal require to food pairing",
          "parameters": [
            {
              "name": "Meal",
              "in": "query",
              "description": "Name of the meal you want recommendations  for",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response"
            },
            "404": {
                "description": "Not found response"
              }
          }
        }
      },
      "/recommendation/external": {
        "get": {
          "summary": "Get default documentation according to our Food Pairing Data base",
          "parameters": [
            {
              "name": "meal",
              "in": "query",
              "description": "Name of the meal you want recommendations  for",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response"
            },
            "404": {
                "description": "Not found response"
              }
          }
        }
      }
    }
  }
  